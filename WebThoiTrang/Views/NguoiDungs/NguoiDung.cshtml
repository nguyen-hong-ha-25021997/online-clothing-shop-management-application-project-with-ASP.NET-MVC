@model IEnumerable<WebThoiTrang.Models.nguoidung>

@{
    ViewBag.Title = "NguoiDung";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}

<h2>NguoiDung</h2>

<td colspan="6" style="text-align:right">

    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header" data-original-title>
                <h2><i class="halflings-icon edit"></i><span class="break"></span>Người dùng </h2>
            </div>
            <div class="box-content">
                <form class="form-horizontal">
                    <fieldset>
                        <p>
                            @Html.ActionLink("Thêm mới người dùng", "ThemND")
                        </p>
                        <table class="table">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Tài khoản
                                </th>
                                <th>
                                    Chủ tài khoản
                                </th>
                                <th>
                                    Chức vụ
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ten)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GroupU.groupName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa thông tin người dùng", "SuaThongTinND", "NguoiDungs", new {id = item.ID }) |
                                        @Html.ActionLink("Thông tin người dùng", "ChiTietND", "NguoiDungs", new { id = item.ID }) |
                                        @Html.ActionLink("Xóa", "XoaND", "NguoiDungs", new { id = item.ID })
                                    </td>
                                </tr>
                            }
                        </table>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</td>
}

