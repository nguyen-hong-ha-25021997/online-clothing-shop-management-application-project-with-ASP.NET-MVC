@using WebThoiTrang.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<HoaDon>

@{
    ViewBag.Title = "HoaDon";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}
<td colspan="6" style="text-align:right">

    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header" data-original-title>
                <h2><i class="halflings-icon edit"></i><span class="break"></span>Hóa Đơn </h2>
            </div>
            <div class="box-content">
                <form class="form-horizontal">
                    <fieldset>

                        <p>

                        </p>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().MaKhachHang)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().DiaChi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().SDT)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().NgayMua)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().NgayGiao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().DaThanhToan)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaKhachHang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiaChi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SDT)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayMua)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayGiao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DaThanhToan)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Sửa đơn", "SuaDon", new { @mahd = item.MaHoaDon }) |
                                        @Html.ActionLink("Thông tin đơn", "ChiTietHoaDon", new { @mahd = item.MaHoaDon }) |
                                        @Html.ActionLink("Xóa đơn", "XoaHoaDon", new { @ma = item.MaHoaDon })
                                    </td>
                                </tr>
                            }

                        </table>
                    </fieldset>
                </form>
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                <div id="loaisp">
                    @Html.PagedListPager(Model, page => Url.Action("HoaDon", new { page = page }))
                </div>

            </div>
            <style>
                #loaisp li {
                    display: inline;
                }
            </style>

        </div>
    </div>
    </div>
